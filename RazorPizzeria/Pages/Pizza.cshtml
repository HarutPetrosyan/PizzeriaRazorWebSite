@page
@model RazorPizzeria.Pages.PizzaModel
@{
}
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Greate selection of pizza!</h1>
        <h4>Try one, or try our pizza builder,Then order and done!</h4>
        <h4>No need to give of your details!</h4>
        <h4>We already know everything</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 mb-5">
                <div class="w-100 row makeYourOunDiv">
                    <div class="col-4">
                        <img src="~/Images/Pizzas/Create.png" class="w-100" style="margin: 20px 0 0 0;"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOunText">
                            <h3 style="text-align: left;">Create Your Oun Pizza</h3>
                            <p style="text-align: left">Make your oun pizza with our PizzaMaker</p>
                            <a class="btn btn-primary" style="float: left"asp-area="" asp-page="Forms/CustomPizza">Try now</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in @Model.FakePizzaDB)
            {
                var ImagePath = "~/Images/Pizzas/" + @pizza.ImageTitle + ".png";
                
                <div class="col-4  mt-5  ">
                    
                    <a class="PizzaTranslation"  asp-area="" asp-page="Checkout/Checkout" 
                       asp-route-ImageTitle="@pizza.ImageTitle"
                       asp-route-PizzaPrice="@pizza.FinalPrice"
                       asp-route-PizzaName="@pizza.PizzaName"><img  src=@ImagePath class="w-100 Background PizzaImg" asp-append-version="true" /></a>
                </div>
            }
           
        </div>
    </div>
</div>

